// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // atau "postgresql", "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id
  email     String   @unique
  first_name      String
  last_name      String?
  password  String
  profile_image  String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Banner {
  id String @id
  banner_name String
  banner_image String
  description String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}